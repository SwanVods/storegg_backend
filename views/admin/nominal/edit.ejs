<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>DataTables</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item "><a href="/nominal">Nominal</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Edit Nominal</h3>
                </div>                    
                <form action="/nominal/edit/<%= nominal._id %>?_method=PUT" method="POST" >
                  <div class="card-body">
                    <div class="form-group">
                      <label>Name Coin</label>
                      <select class="form-control select2" name="coinName" style="width: 100%;">                        
                        <option value="Jewel" <%= nominal.coinName == "Jewel" ? 'selected' : ' ' %>>Jewel</option>
                        <option value="Silver" <%= nominal.coinName == "Silver" ? 'selected' : ' ' %>>Silver</option>
                        <option value="Gold" <%= nominal.coinName == "Gold" ? 'selected' : ' ' %>>Gold</option>                                                
                      </select>
                    </div>

                    <div class="form-group">
                      <label for="exampleInputEmail1">Jumlah coin</label>
                      <input type="text" value="<%= nominal.coinQuantity %> " name="coinQuantity"  class="form-control" id="exampleInputEmail1" placeholder="<%= nominal.coinQuantity %>">
                    </div>

                    <div class="form-group">
                      <label for="exampleInputEmail1">Price</label>
                      <input type="text" value="<%= nominal.price %> " name="price"  class="form-control" id="exampleInputEmail1" placeholder="<%= nominal.price %>">
                    </div>
                    
                  </div>                    
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>       
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>